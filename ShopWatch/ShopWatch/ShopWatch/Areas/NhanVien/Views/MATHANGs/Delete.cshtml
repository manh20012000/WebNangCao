@model ShopWatch.Models.MATHANG

@{
    ViewBag.Title = "DeleteReceipt";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout1.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>

    <dl class="dl-horizontal">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TENHANG)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TENHANG)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ANHSANPHAM)
        </dt>
        <dd class="col-sm-9">
            <img src="@Url.Content(Model.ANHSANPHAM)" alt="Product Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NGAYSANXUAT)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NGAYSANXUAT)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TENHANGSANXUAT)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TENHANGSANXUAT)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.GIAHANG)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.GIAHANG)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BAOHANH)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BAOHANH)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>













