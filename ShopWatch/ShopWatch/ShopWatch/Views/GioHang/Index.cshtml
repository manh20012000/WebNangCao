    <script>
        let tongtien = 0;
        var selectedItems = []; // Danh sách các mathang chọn  đã chọn
        function updateTotalPrice() {
            var totalPrice = selectedItems.reduce(function (total, item) {
                tongtien = total + item.GiaTien;
                return total + item.GiaTien;
            }, 0);
            var totalPriceDisplay = document.getElementById('total-price');

            totalPriceDisplay.textContent = "Tổng Tiền: " + totalPrice + ' VND'; // Hiển thị tổng giá tiền với 2 chữ số thập phân
        }
        function calculatePriceAndAdd(row, quantity) {
            var giaHangElement = row.querySelector('.gia-hang-label');
            var giaHang = parseFloat(row.querySelector('.gia-hang-label').textContent.replace(/\D/g, ''));
            var phanTramGiamGia = parseFloat(row.querySelector('.phantram-giamgia-label').textContent.replace(/\D/g, ''));
        
            if (isNaN(phanTramGiamGia)) {
                phanTramGiamGia = 0;

            }

            var giaTien = giaHang * quantity * (1 - phanTramGiamGia / 100);
            console.log(giaTien, 'giaten')
            var mamathang = row.querySelector('.text-center:nth-child(2)').textContent.trim();
            var chitietDatHang = {
                MAMATHANG: mamathang,
                SOLUONG: quantity,
                GiaTien: giaTien,
                GIANHAP: giaHang * quantity,

            };

            var index = selectedItems.findIndex(item => item.MAMATHANG === mamathang);
            if (index === -1) {
                selectedItems.push(chitietDatHang);
            } else {
                selectedItems[index].SOLUONG = quantity;
                selectedItems[index].GiaTien = giaTien;
            }
           
            updateTotalPrice();
        }


        function toggleQuantityControl(row, show) {
            var quantityControl = row.querySelector('.quantity-control');
            quantityControl.style.display = show ? 'block' : 'none';
        }

        var checkboxes = document.querySelectorAll('.product-checkbox');
        checkboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                var row = this.closest('tr');
                toggleQuantityControl(row, this.checked);
                if (!checkbox.checked) {
                   
                    var index = selectedItems.findIndex(item => item.MAMATHANG === row.querySelector('.text-center:nth-child(1)').textContent);
                    if (index !== -1) {
                        selectedItems.splice(index, 1);
                    }
                   
                    var Mamathang = row.querySelector('.text-center:nth-child(2)').textContent.trim();
                    var sotien = 0;
                    var selectedItem = selectedItems.find(item => item.MAMATHANG === Mamathang);
                    if (selectedItem) {
                        sotien = selectedItem.GiaTien;
                    }
                    // Trừ sotien từ tổng giá tiền và cập nhật lại total view
                    tongtien -= sotien;
                    var totalPriceDisplay = document.getElementById('total-price');
                    totalPriceDisplay.textContent = "Tổng Tiền: " + tongtien + ' VND'; // Hiển thị tổng giá tiền với 2 chữ số thập phân
                    // Loại bỏ item khỏi selectedItems
                    var index = selectedItems.findIndex(item => item.MAMATHANG === Mamathang);
                    if (index !== -1) {
                        selectedItems.splice(index, 1);
                    }
                }
            });
        });
        var increaseButtons = document.querySelectorAll('.quantity-increase');
        var decreaseButtons = document.querySelectorAll('.quantity-decrease');

        increaseButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                var row = this.closest('tr');
                var quantityInput = row.querySelector('.quantity-input');
                var quantity = parseInt(quantityInput.value) + 1;
                quantityInput.value = quantity;
                calculatePriceAndAdd(row, quantity);
            });
        });

        decreaseButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                var row = this.closest('tr');
                var quantityInput = row.querySelector('.quantity-input');
                var quantity = parseInt(quantityInput.value) - 1;
                if (quantity >= 0) {
                    quantityInput.value = quantity;
                    calculatePriceAndAdd(row, quantity);
                }
            });
        });

        $('#chitietdathang').submit(function (event) {
            event.preventDefault();
            var requestData = {
                selectedItemsData: selectedItems,
                giatien: tongtien,
                    };
            $.ajax({
                type: 'POST',
                url: '/DatHang/PhieuDatHang',
                contentType: 'application/json',
                data: JSON.stringify(requestData),
                success: function (response) {
                    console.log('Data sent successfully');
                    alert('nhập hàng thành công')
                    // Cập nhật giao diện sau khi gửi dữ liệu
                },
                error: function (error) {
                    console.error('Error:', error);
                }
            });
        });
    </script>
